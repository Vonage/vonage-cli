{
  "name": "@vonage/cli-monorepo",
  "private": true,
  "homepage": "https://github.com/Vonage/vonage-cli#readme",
  "bugs": {
    "url": "https://github.com/Vonage/vonage-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vonage/vonage-cli.git"
  },
  "license": "Apache 2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "compile": "lerna run compile",
    "depcheck": "lerna exec --no-bail --stream --prefix npx depcheck -- --ignore-dirs=dist",
    "eslint": "eslint",
    "format": "prettier -- -w",
    "preinstall": "npx npm-force-resolutions",
    "lerna": "lerna",
    "lint": "eslint .",
    "lint:fix": "eslint -- . --fix",
    "prepare": "is-ci || husky install",
    "publish": "lerna publish",
    "test": "jest",
    "tsc": "tsc"
  },
  "lint-staged": {
    "package.json": [
      "npx sort-package-json"
    ],
    "*.js": [
      "prettier -w",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier -w",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@oclif/test": "2.3.14",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.37.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-oclif": "4.0.0",
    "eslint-config-oclif-typescript": "1.0.3",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-deprecation": "1.4.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jest-extended": "2.0.0",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "lerna": "^6.6.1",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "13.2.0",
    "mock-stdin": "1.0.0",
    "nock": "^13.3.0",
    "prettier": "2.8.7",
    "prettier-eslint": "15.0.1",
    "strip-ansi": "6.0.1",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
