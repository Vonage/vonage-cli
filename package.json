{
  "name": "@vonage/cli-monorepo",
  "private": true,
  "homepage": "https://github.com/Vonage/vonage-cli#readme",
  "bugs": {
    "url": "https://github.com/Vonage/vonage-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vonage/vonage-cli.git"
  },
  "license": "Apache 2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "compile": "lerna run compile",
    "depcheck": "lerna exec --no-bail --stream --prefix npx depcheck -- --ignore-dirs=dist",
    "eslint": "eslint",
    "format": "prettier -- -w",
    "lerna": "lerna",
    "lint": "eslint .",
    "lint:fix": "eslint -- . --fix",
    "prepare": "is-ci || husky install",
    "publish": "lerna publish",
    "test": "mocha --forbid-only 'packages/**/__tests__/**/*.test.ts'",
    "tsc": "tsc"
  },
  "lint-staged": {
    "package.json": [
      "npx sort-package-json"
    ],
    "*.js": [
      "prettier -w",
      "eslint --fix"
    ],
    "*.ts": [
      "prettier -w",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/plugin-transform-typescript": "7.21.3",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-typescript": "7.21.4",
    "@babel/types": "^7.21.4",
    "@oclif/test": "2.3.14",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "babel-plugin-module-resolver": "5.0.0",
    "chai": "4.3.7",
    "eslint": "8.37.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-oclif": "4.0.0",
    "eslint-config-oclif-typescript": "1.0.3",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-deprecation": "1.4.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "is-ci": "3.0.1",
    "lerna": "^6.6.1",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "13.2.0",
    "mocha": "10.2.0",
    "nock": "^13.3.0",
    "prettier": "2.8.7",
    "prettier-eslint": "15.0.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
