{
    "root": true,
    "env": {
        "es6": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "oclif",
        "oclif-typescript",
        "eslint:recommended",
        "google",
        "plugin:@typescript-eslint/recommended",
        "plugin:mocha/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "mocha",
        "deprecation",
        "prettier"
    ],
    "rules": {
        "semi": "warn",
        "comma-dangle": "warn",
        "curly": [
            "error",
            "all"
        ],
        "indent": [
            "error",
            2
        ],
        "object-curly-spacing": [
            "error",
            "always",
            {
                "objectsInObjects": true,
                "arraysInObjects": true
            }
        ],
        "require-jsdoc": [
            "off"
        ],
        "operator-linebreak": [
            "error",
            "before"
        ],
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true,
                "ignorePattern": "^test"
            }
        ]
    }
}
