{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "pretty": true,
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "references": [
        { "path": "packages/applications/" }
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.test.*"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
