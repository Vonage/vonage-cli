{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Vonage JWT ACL Schema",
  "type": "object",
  "required": ["acl"],
  "properties": {
    "acl": {
      "type": "object",
      "additionalProperties": false,
      "required": ["paths"],
      "properties": {
        "paths": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^/[^\\s]*$": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "methods": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
                  }
                },
                "filters": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}
