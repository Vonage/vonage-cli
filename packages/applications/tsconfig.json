{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "pretty": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": false,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
