{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "nodeNext",

    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": true,
    "allowJs": true,
    "esModuleInterop": true
  },

  "includes": [
    "lib"
  ],

  "exclude": [
    "dist",
    "__tests__"
  ]
}
