{
    "compilerOptions": {
        "sourceMap": true,
        "removeComments": true,
        "lib": [
            "ES2022"
        ],

        "target": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "pretty": true,
        "preserveSymlinks": true,
        "resolveJsonModule": true,

        "types": [
            "jest",
            "node"
        ],

        "declaration": true,
        "composite": true,
        "noEmit": false,
        "baseUrl": "."
    },

    "ts-node": {
        "esm": true
    }
}
