{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "node16",

    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "composite": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@vonage/cli-*": [
        "packages/cli-*/lib"
      ]
    }
  },

  "includes": [
    "lib"
  ],

  "exclude": [
    "dist",
    "__tests__"
  ],

  "references": [
    { "path": "../cli-core" }
  ]
}
